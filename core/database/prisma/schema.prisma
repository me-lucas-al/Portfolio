generator client {
   provider = "prisma-client"
   output = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?   @db.Text
  githubUrl   String
  deployUrl   String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}