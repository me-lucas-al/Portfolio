generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Roles    @default(USER)
  createdAt DateTime @default(now())
}

model Project {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?  @db.Text
  githubUrl    String
  technologies String[]
  deployUrl    String?
  imagesUrl    String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("projects")
}

model Skill {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id          Int      @id @default(autoincrement())
  role        String
  company     String
  period      String
  description String   @db.Text
  techs       String[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Education {
  id          Int      @id @default(autoincrement())
  course      String
  institution String
  period      String
  type        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Roles {
  ADMIN
  USER
}
