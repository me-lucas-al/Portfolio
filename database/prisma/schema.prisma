generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Roles    @default(USER)
  createdAt DateTime @default(now())
}

model Project {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?  @db.Text
  githubUrl    String
  technologies String[]
  deployUrl    String?
  imagesUrl    String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("projects")
}

enum Roles {
  ADMIN
  USER
}
